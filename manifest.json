{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "version": "1.0",
  "description": "在網頁右下角顯示當前網頁的二維碼",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["qrcode.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 